{% extends '::base_admin.html.twig' %}

{% block body -%}
    <h1>Quiz list</h1>

    <table class="table table-bordered table-stripped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.title }}</td>
                <td>
                        <a href="{{ path('quiz_show', { 'id': entity.id }) }}" class="btn btn-default">show</a>
                        <a href="{{ path('quiz_edit', { 'id': entity.id }) }}" class="btn btn-default">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('quiz_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
