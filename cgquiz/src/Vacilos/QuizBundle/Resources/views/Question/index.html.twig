{% extends '::base_admin.html.twig' %}

{% block body -%}
    <h1>Question list</h1>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>

                <th>Question</th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>

                <td>{{ entity.question }}</td>
                <td>
                        <a href="{{ path('question_show', { 'id': entity.id }) }}" class="btn btn-default">show</a>
                        <a href="{{ path('question_edit', { 'id': entity.id }) }}" class="btn btn-default">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('question_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
