{% extends '::base.html.twig' %}

{% block pagetitle %}
    <h1>{% trans %}Quiz List{% endtrans %} {{ app.user }}
        <small>{% trans %}Quiz{% endtrans %}</small>
    </h1>
{% endblock pagetitle %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="active"><i class="fa fa-dashboard"></i> {% trans %}Quiz List{% endtrans %}</li>
    </ol>
{% endblock breadcrumb %}

{% block body -%}

    <dic class="row">
        <div class="col-sm-12">
            <div class="portlet portlet-green">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>
                            Λίστα των Quiz που έχω συμμετάσχει
                        </h4>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="portlet-body">
                    <table class="table table-bordered table-condensed table-striped">
                        <thead>
                        <tr>
                            <th>
                                Ονομασία
                            </th>
                            <th>
                                Ενέργειες
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for quiz in quizs %}
                            <tr>
                                <td>
                                    {{ quiz.quiz }}
                                </td>
                                <td>
                                    <a href="{{ path('userquiz_view', {'slug': quiz.quiz.slug}) }}" class="btn btn-primary"><i class="fa fa-eye"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </dic>




{% endblock %}
