{% extends '::base.html.twig' %}

{% block pagetitle %}
    <h1>{% trans %}Answer{% endtrans %} {{ app.user }}
        <small>{% trans %}Quiz{% endtrans %}</small>
    </h1>
{% endblock pagetitle %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="active"><i class="fa fa-dashboard"></i> {% trans %}Present Question{% endtrans %}</li>
    </ol>
{% endblock breadcrumb %}

{% block body -%}

<dic class="row">
    <div class="col-sm-6">
        <div class="portlet portlet-blue">
            <div class="portlet-heading">
                <div class="portlet-title">
                    <h4>
                        {{ userQuiz.quiz }}
                    </h4>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="portlet-body">
                <h3>
                    {{ correctAns.question }}
                </h3>
                <ul>
                {% for ans in correctAns.question.answers %}
                    <li>{{ ans }}</li>
                {% endfor %}
                </ul>
            </div>
        </div>
    </div>
    {% if correct == 1 %}
        <div class="col-sm-6">
            <div class="portlet portlet-green">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>
                            ΣΩΣΤΗ ΑΠΑΝΤΗΣΗ
                        </h4>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="portlet-body text-center">
                    <div class="text-success text-center">
                        <i class="fa fa-smile-o fa-5x"></i>
                    </div>
                    <h4 class="text-center">
                        Η απάντηση που έδωσες στην ερώτηση ήταν η: <b>{{ answer }}</b>!
                    </h4>
                    <p class="text-center">
                        Η απάντηση που έδωσες στην ερώτηση ήταν σωστή
                    </p>
                </div>
                <div class="portlet-footer">
                    Σωστή απάντηση: <b>{{ correctAns }}</b>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-sm-6">
            <div class="portlet portlet-red">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>
                            ΕΣΦΑΛΜΕΝΗ ΑΠΑΝΤΗΣΗ
                        </h4>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="portlet-body text-center">
                    <div class="text-danger text-center">
                        <i class="text-danger fa fa-frown-o fa-5x"></i>
                    </div>
                    <h4 class="text-center">
                        Η απάντηση που έδωσες στην ερώτηση ήταν η: <b>{{ answer }}</b>!
                    </h4>
                    <p class="text-center">
                        Η απάντηση που έδωσες στην ερώτηση δεν ήταν σωστή
                    </p>
                </div>
                <div class="portlet-footer">
                    Σωστή απάντηση: <b>{{ correctAns }}</b>
                </div>
            </div>
        </div>
    {% endif %}
    <div class="col-sm-12">
        <a href="{{ path('userquiz_enter', {'quizId':userQuiz.quiz.id}) }}" class="btn btn-lg btn-block btn-primary">Επόμενη ερώτηση</a>
    </div>
</dic>




    {% endblock %}
