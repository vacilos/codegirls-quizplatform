{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    <div class="col-md-4 col-md-offset-4">
        <div class="login-banner text-center">
            <h1><i class="fa fa-gears"></i> CodeGirls Quiz</h1>
        </div>
        <div class="portlet portlet-green">
            <div class="portlet-heading login-heading">
                <div class="portlet-title">
                    <h4 class="text-center"><strong>Register to CodeGirls Quiz!</strong>
                    </h4>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="portlet-body">
                <p>{{ 'registration.confirmed'|trans({'%username%': user.username}, 'FOSUserBundle') }}</p>
                {% if app.session is not empty %}
                    {% set targetUrl = app.session.get('_security.target_path') %}
                    {% if targetUrl is not empty %}
                        <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans({}, 'FOSUserBundle') }}</a></p>
                    {% endif %}
                {% endif %}
                <p class="text-center">
                Do not wait anymore!
                <a href="{{ path('fos_user_security_login') }}" class="btn btn-default btn-block"><i class="fa fa-key"></i> Sign In</a>
            </p>
            </div>
        </div>
    </div>

{% endblock fos_user_content %}
