<div class="col-md-4 col-md-offset-4">
    <div class="login-banner text-center">
        <h1><i class="fa fa-gears"></i> CodeGirls Quiz</h1>
    </div>
    <div class="portlet portlet-green">
        <div class="portlet-heading login-heading">
            <div class="portlet-title">
                <h4 class="text-center"><strong>Register to CodeGirls Quiz!</strong>
                </h4>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="portlet-body">

            <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">
                {% if form_errors(form)|length > 0 %}
                    <div class="alert alert-danger">
                        {{ form_errors(form) }}
                    </div>
                {% endif %}

                <fieldset>
                    <div class="form-group">
                        <label class="control-label" for="username">Username</label>
                        <div class="controls">
                            {% if form_errors(form.username)|length > 0 %}
                                <div class="alert alert-danger">{{ form_errors(form.username) }}</div>
                            {% endif %}
                            {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="email">Email</label>
                        <div class="controls">
                            {% if form_errors(form.email)|length > 0 %}
                                <div class="alert alert-danger">{{ form_errors(form.email) }}</div>
                            {% endif %}
                            {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}


                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="inputPasswordFirst">Password</label>
                        <div class="controls">
                            {% if form_errors(form.plainPassword.first)|length > 0 %}
                                <div class="alert alert-danger">{{ form_errors(form.plainPassword.first) }}</div>
                            {% endif %}
                            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="inputPasswordSecond">Repeat Password</label>
                        <div class="controls">
                            {% if form_errors(form.plainPassword.second)|length > 0 %}
                                <div class="alert alert-danger">{{ form_errors(form.plainPassword.second) }}</div>
                            {% endif %}
                            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>

                    <br>
                    <button type="submit" class="btn btn-lg btn-green btn-block"><i class="fa fa-arrow-circle-o-right"></i> Register</button>
                </fieldset>
                {{ form_rest(form) }}
            </form>

            <br>
            <p class="text-center">
                You already have an account?
                <a href="{{ path('fos_user_security_login') }}" class="btn btn-default btn-block"><i class="fa fa-key"></i> Sign In</a>
            </p>

        </div>
    </div>
</div>
